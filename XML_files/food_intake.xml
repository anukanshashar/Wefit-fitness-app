<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".areas.Arms">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="-88dp"
        android:layout_marginRight="-88dp"
        android:text="Food Intake"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="306dp"
        android:layout_marginRight="306dp"
        app:srcCompat="@drawable/food" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2900px"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/corner4"
            android:orientation="horizontal"
            app:cardCornerRadius="24dp"
            app:cardElevation="200dip">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/breakfast"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/exc_box_meditation"
                android:text="Breakfast"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lunch"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="135dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/exc_box_meditation"
                android:text="Lunch"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dinner"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/exc_box_meditation"
                android:text="Dinner"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="60dp"
                android:background="@color/sky_blue" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/image1"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginStart="115dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="400dp"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/image2"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginStart="115dp"
                android:layout_marginTop="760dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="880dp"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textColor="@color/black" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
